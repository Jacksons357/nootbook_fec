<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-lg mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-4">
          <li>
            <%= link_to notebooks_path, class: "text-gray-400 hover:text-gray-500 transition-colors" do %>
              <svg class="flex-shrink-0 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
              </svg>
            <% end %>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <%= link_to @notebook.identificacao_equipamento, notebook_path(@notebook), class: "ml-4 text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors" %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="ml-4 text-sm font-medium text-gray-500">Emprestar</span>
            </div>
          </li>
        </ol>
      </nav>
      
      <div class="mt-6 flex items-center">
        <div class="h-12 w-12 rounded-lg bg-green-100 flex items-center justify-center">
          <svg class="h-6 w-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
        </div>
        <div class="ml-4">
          <h1 class="text-2xl font-bold text-gray-900">Emprestar Notebook</h1>
          <p class="mt-1 text-gray-600">
            <span class="font-medium"><%= @notebook.identificacao_equipamento %></span> • 
            <%= @notebook.marca %> <%= @notebook.modelo %>
          </p>
        </div>
      </div>
    </div>

    <!-- Notebook Info -->
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-4 py-5 sm:p-6">
        <div class="bg-gradient-to-r from-green-50 to-emerald-50 border border-green-200 rounded-lg p-4">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-semibold text-green-800">Notebook Disponível para Empréstimo</h3>
              <div class="mt-2 text-sm text-green-700">
                <p>Este equipamento está pronto para ser emprestado. Preencha as informações do colaborador abaixo.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Form -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center mb-6">
          <svg class="h-6 w-6 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
          </svg>
          <h3 class="text-lg font-medium text-gray-900">Informações do Colaborador</h3>
        </div>

        <%= form_with url: emprestar_notebook_path(@notebook), method: :post, local: true, class: "space-y-6" do |form| %>
          <div>
            <%= form.label :nome_colaborador, "Nome do Colaborador", class: "block text-sm font-medium text-gray-700" do %>
              <span class="flex items-center">
                <svg class="h-4 w-4 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                Nome Completo
              </span>
            <% end %>
            <%= form.text_field :nome_colaborador, 
                required: true, 
                placeholder: "Ex: João Silva Santos",
                class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md",
                title: "Digite o nome completo do colaborador" %>
            <p class="mt-1 text-xs text-gray-500">Nome completo do colaborador que receberá o notebook</p>
          </div>

          <div>
            <%= form.label :setor, "Setor", class: "block text-sm font-medium text-gray-700" do %>
              <span class="flex items-center">
                <svg class="h-4 w-4 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                Setor/Departamento
              </span>
            <% end %>
            <%= form.text_field :setor, 
                required: true, 
                placeholder: "Ex: TI, RH, Financeiro, Marketing",
                class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md",
                title: "Digite o setor ou departamento do colaborador" %>
            <p class="mt-1 text-xs text-gray-500">Setor ou departamento onde o colaborador trabalha</p>
          </div>

          <!-- Notebook Summary -->
          <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
            <h4 class="text-sm font-medium text-gray-700 mb-3 flex items-center">
              <svg class="h-4 w-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Resumo do Empréstimo
            </h4>
            <dl class="grid grid-cols-1 gap-2 text-sm">
              <div class="flex justify-between">
                <dt class="text-gray-500">Equipamento:</dt>
                <dd class="font-medium text-gray-900"><%= @notebook.identificacao_equipamento %></dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-gray-500">Modelo:</dt>
                <dd class="font-medium text-gray-900"><%= @notebook.marca %> <%= @notebook.modelo %></dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-gray-500">Patrimônio:</dt>
                <dd class="font-mono font-medium text-gray-900"><%= @notebook.numero_patrimonio %></dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-gray-500">Data do Empréstimo:</dt>
                <dd class="font-medium text-gray-900"><%= Date.current.strftime("%d/%m/%Y") %></dd>
              </div>
            </dl>
          </div>

          <!-- Action Buttons -->
          <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
            <%= link_to notebook_path(@notebook), 
                class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors",
                title: "Cancelar e voltar aos detalhes do notebook" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              Cancelar
            <% end %>
            <%= form.submit "Confirmar Empréstimo", 
                class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-gradient-to-r from-green-600 to-green-700 hover:from-green-700 hover:to-green-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-200 transform hover:scale-105",
                title: "Confirmar o empréstimo do notebook" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Confirmar Empréstimo
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 