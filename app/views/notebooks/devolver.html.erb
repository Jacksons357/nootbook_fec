<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-lg mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-4">
          <li>
            <%= link_to notebooks_path, class: "text-gray-400 hover:text-gray-500 transition-colors" do %>
              <svg class="flex-shrink-0 h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"></path>
              </svg>
            <% end %>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <%= link_to @notebook.identificacao_equipamento, notebook_path(@notebook), class: "ml-4 text-sm font-medium text-gray-500 hover:text-gray-700 transition-colors" %>
            </div>
          </li>
          <li>
            <div class="flex items-center">
              <svg class="flex-shrink-0 h-5 w-5 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="ml-4 text-sm font-medium text-gray-500">Devolver</span>
            </div>
          </li>
        </ol>
      </nav>
      
      <div class="mt-6 flex items-center">
        <div class="h-12 w-12 rounded-lg bg-yellow-100 flex items-center justify-center">
          <svg class="h-6 w-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"></path>
          </svg>
        </div>
        <div class="ml-4">
          <h1 class="text-2xl font-bold text-gray-900">Devolver Notebook</h1>
          <p class="mt-1 text-gray-600">
            <span class="font-medium"><%= @notebook.identificacao_equipamento %></span> • 
            <%= @notebook.marca %> <%= @notebook.modelo %>
          </p>
        </div>
      </div>
    </div>

    <!-- Current Loan Info -->
    <div class="bg-white shadow rounded-lg mb-6">
      <div class="px-4 py-5 sm:p-6">
        <div class="bg-gradient-to-r from-yellow-50 to-orange-50 border border-yellow-200 rounded-lg p-4">
          <div class="flex items-start">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-3 flex-1">
              <h3 class="text-sm font-semibold text-yellow-800">Notebook Atualmente Emprestado</h3>
              <div class="mt-2 text-sm text-yellow-700">
                <% if @notebook.emprestimo_atual %>
                  <div class="grid grid-cols-1 gap-2">
                    <div class="flex items-center">
                      <svg class="h-4 w-4 mr-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                      </svg>
                      <span class="font-medium"><%= @notebook.emprestimo_atual.nome_colaborador %></span>
                    </div>
                    <div class="flex items-center">
                      <svg class="h-4 w-4 mr-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                      </svg>
                      Setor: <span class="font-medium"><%= @notebook.emprestimo_atual.setor %></span>
                    </div>
                    <div class="flex items-center">
                      <svg class="h-4 w-4 mr-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                      Emprestado em: <span class="font-medium"><%= @notebook.emprestimo_atual.data_emprestimo.strftime("%d/%m/%Y") %></span>
                    </div>
                    <div class="flex items-center">
                      <svg class="h-4 w-4 mr-2 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      Tempo de empréstimo: <span class="font-medium"><%= ((Date.current - @notebook.emprestimo_atual.data_emprestimo).to_i) %> dia<%= 's' if ((Date.current - @notebook.emprestimo_atual.data_emprestimo).to_i) != 1 %></span>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Form -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <div class="flex items-center mb-6">
          <svg class="h-6 w-6 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
          </svg>
          <h3 class="text-lg font-medium text-gray-900">Informações da Devolução</h3>
        </div>

        <%= form_with url: devolver_notebook_path(@notebook), method: :post, local: true, class: "space-y-6" do |form| %>
          <div>
            <%= form.label :motivo_devolucao, "Motivo da Devolução", class: "block text-sm font-medium text-gray-700" do %>
              <span class="flex items-center">
                <svg class="h-4 w-4 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
                </svg>
                Motivo da Devolução (Opcional)
              </span>
            <% end %>
            <%= form.text_area :motivo_devolucao, 
                rows: 3, 
                placeholder: "Ex: Projeto concluído, equipamento em bom estado, troca de equipamento, etc.",
                class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md",
                title: "Informe o motivo da devolução, se aplicável" %>
            <p class="mt-1 text-xs text-gray-500">Descreva o motivo da devolução para fins de controle e histórico</p>
          </div>

          <!-- Return Summary -->
          <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
            <h4 class="text-sm font-medium text-gray-700 mb-3 flex items-center">
              <svg class="h-4 w-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
              Resumo da Devolução
            </h4>
            <dl class="grid grid-cols-1 gap-2 text-sm">
              <div class="flex justify-between">
                <dt class="text-gray-500">Equipamento:</dt>
                <dd class="font-medium text-gray-900"><%= @notebook.identificacao_equipamento %></dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-gray-500">Colaborador:</dt>
                <dd class="font-medium text-gray-900"><%= @notebook.emprestimo_atual&.nome_colaborador %></dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-gray-500">Data da Devolução:</dt>
                <dd class="font-medium text-gray-900"><%= Date.current.strftime("%d/%m/%Y") %></dd>
              </div>
              <div class="flex justify-between">
                <dt class="text-gray-500">Novo Estado:</dt>
                <dd class="font-medium text-green-600">Disponível</dd>
              </div>
            </dl>
          </div>

          <!-- Action Buttons -->
          <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
            <%= link_to notebook_path(@notebook), 
                class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors",
                title: "Cancelar e voltar aos detalhes do notebook" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
              Cancelar
            <% end %>
            <%= form.submit "Confirmar Devolução", 
                class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-gradient-to-r from-yellow-600 to-yellow-700 hover:from-yellow-700 hover:to-yellow-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-500 transition-all duration-200 transform hover:scale-105",
                title: "Confirmar a devolução do notebook" do %>
              <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
              Confirmar Devolução
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div> 