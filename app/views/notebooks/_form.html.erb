<%= form_with model: @notebook, local: true, class: "space-y-6" do |form| %>
  <% if @notebook.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(@notebook.errors.count, "erro") %> impediram este notebook de ser salvo:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% @notebook.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Informações Básicas -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center mb-4">
      <svg class="h-6 w-6 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900">Informações Básicas</h3>
    </div>
    
    <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
      <div class="sm:col-span-3">
        <%= form.label :marca, class: "block text-sm font-medium text-gray-700" do %>
          <span class="flex items-center">
            <svg class="h-4 w-4 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            Marca
          </span>
        <% end %>
        <%= form.text_field :marca, 
            placeholder: "Ex: Dell, HP, Lenovo, Apple",
            class: "mt-1 p-2 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-2 border-gray-300 rounded-md",
            title: "Digite a marca do notebook (ex: Dell, HP, Lenovo)" %>
        <p class="mt-1 text-xs text-gray-500">Nome da fabricante do equipamento</p>
      </div>

      <div class="sm:col-span-3">
        <%= form.label :modelo, class: "block text-sm font-medium text-gray-700" do %>
          <span class="flex items-center">
            <svg class="h-4 w-4 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path>
            </svg>
            Modelo
          </span>
        <% end %>
        <%= form.text_field :modelo, 
            placeholder: "Ex: Latitude 5520, ThinkPad T14, MacBook Pro",
            class: "mt-1 p-2 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-2 border-gray-300 rounded-md",
            title: "Digite o modelo específico do notebook" %>
        <p class="mt-1 text-xs text-gray-500">Modelo específico do equipamento</p>
      </div>
    </div>
  </div>

  <!-- Identificação do Equipamento -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center mb-4">
      <svg class="h-6 w-6 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900">Identificação do Equipamento</h3>
    </div>
    
    <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
      <div class="sm:col-span-2">
        <%= form.label :numero_patrimonio, "Número de Patrimônio", class: "block text-sm font-medium text-gray-700" do %>
          <span class="flex items-center">
            <svg class="h-4 w-4 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Nº Patrimônio
          </span>
        <% end %>
        <%= form.text_field :numero_patrimonio, 
            placeholder: "Ex: 2024001, PAT001",
            class: "mt-1 p-2 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-2 border-gray-300 rounded-md font-mono",
            title: "Número de patrimônio único do equipamento" %>
        <p class="mt-1 text-xs text-gray-500">Código único de patrimônio</p>
      </div>

      <div class="sm:col-span-2">
        <%= form.label :numero_serie, "Número de Série", class: "block text-sm font-medium text-gray-700" do %>
          <span class="flex items-center">
            <svg class="h-4 w-4 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14"></path>
            </svg>
            Nº Série
          </span>
        <% end %>
        <%= form.text_field :numero_serie, 
            placeholder: "Ex: SN1234567890, ABC123XYZ",
            class: "mt-1 p-2 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-2 border-gray-300 rounded-md font-mono",
            title: "Número de série do fabricante" %>
        <p class="mt-1 text-xs text-gray-500">Número de série do fabricante</p>
      </div>

      <div class="sm:col-span-2">
        <%= form.label :identificacao_equipamento, "Identificação do Equipamento", class: "block text-sm font-medium text-gray-700" do %>
          <span class="flex items-center">
            <svg class="h-4 w-4 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
            ID Equipamento
          </span>
        <% end %>
        <%= form.text_field :identificacao_equipamento, 
            placeholder: "Ex: NB001, LAPTOP01",
            class: "mt-1 p-2 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-2 border-gray-300 rounded-md font-mono",
            title: "Identificação interna do equipamento" %>
        <p class="mt-1 text-xs text-gray-500">Código interno de identificação</p>
      </div>
    </div>
  </div>

  <!-- Datas -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center mb-4">
      <svg class="h-6 w-6 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900">Datas</h3>
    </div>
    
    <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
      <div class="sm:col-span-3">
        <%= form.label :data_compra, "Data de Compra", class: "block text-sm font-medium text-gray-700" do %>
          <span class="flex items-center">
            <svg class="h-4 w-4 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
            </svg>
            Data de Compra
          </span>
        <% end %>
        <%= form.date_field :data_compra, 
            class: "mt-1 p-2 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-2 border-gray-300 rounded-md",
            title: "Data em que o equipamento foi adquirido" %>
        <p class="mt-1 text-xs text-gray-500">Data de aquisição do equipamento</p>
      </div>

      <div class="sm:col-span-3">
        <%= form.label :data_fabricacao, "Data de Fabricação", class: "block text-sm font-medium text-gray-700" do %>
          <span class="flex items-center">
            <svg class="h-4 w-4 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
            </svg>
            Data de Fabricação
          </span>
        <% end %>
        <%= form.date_field :data_fabricacao, 
            class: "mt-1 p-2 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-2 border-gray-300 rounded-md",
            title: "Data de fabricação do equipamento" %>
        <p class="mt-1 text-xs text-gray-500">Data de fabricação (opcional)</p>
      </div>
    </div>
  </div>

  <!-- Descrição -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center mb-4">
      <svg class="h-6 w-6 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900">Descrição</h3>
    </div>
    
    <div class="sm:col-span-6">
      <%= form.label :descricao, "Descrição", class: "block text-sm font-medium text-gray-700" do %>
        <span class="flex items-center">
          <svg class="h-4 w-4 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"></path>
          </svg>
          Descrição
        </span>
      <% end %>
      <%= form.text_area :descricao, 
          rows: 3, 
          placeholder: "Ex: Notebook Dell Latitude 5520, Intel i7, 16GB RAM, SSD 512GB, Windows 11 Pro",
          class: "mt-1 p-2 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-2 border-gray-300 rounded-md",
          title: "Descrição detalhada do equipamento" %>
      <p class="mt-1 text-xs text-gray-500">Informações adicionais sobre o equipamento (especificações, observações, etc.)</p>
    </div>
  </div>

  <!-- Nota Fiscal -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex items-center mb-4">
      <svg class="h-6 w-6 text-indigo-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
      </svg>
      <h3 class="text-lg font-medium text-gray-900">Nota Fiscal</h3>
    </div>
    
    <div class="sm:col-span-6">
      <%= form.label :nota_fiscal_pdf, "Nota Fiscal (PDF)", class: "block text-sm font-medium text-gray-700" do %>
        <span class="flex items-center">
          <svg class="h-4 w-4 text-gray-400 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
          </svg>
          Nota Fiscal (PDF)
        </span>
      <% end %>
      <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-md hover:border-indigo-400 transition-colors">
        <div class="space-y-1 text-center">
          <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
            <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
          </svg>
          <div class="flex text-sm text-gray-600">
            <label for="notebook_nota_fiscal_pdf" class="relative cursor-pointer bg-white rounded-md font-medium text-indigo-600 hover:text-indigo-500 focus-within:outline-none focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500">
              <span>Fazer upload de um arquivo</span>
              <%= form.file_field :nota_fiscal_pdf, accept: ".pdf", class: "sr-only" %>
            </label>
            <p class="pl-1">ou arraste e solte</p>
          </div>
          <p class="text-xs text-gray-500">PDF até 10MB • Apenas arquivos PDF são aceitos</p>
        </div>
      </div>
      <% if @notebook.nota_fiscal_pdf.attached? %>
        <div class="mt-2 flex items-center p-3 bg-green-50 border border-green-200 rounded-md">
          <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          <span class="ml-2 text-sm text-green-700">Arquivo anexado: <%= @notebook.nota_fiscal_pdf.filename %></span>
          <span class="ml-auto text-xs text-green-600">(<%= number_to_human_size(@notebook.nota_fiscal_pdf.byte_size) %>)</span>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Botões de Ação -->
  <div class="flex justify-end space-x-3 pt-6 border-t border-gray-200">
    <%= link_to notebooks_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors" do %>
      <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
      </svg>
      Cancelar
    <% end %>
    <%= form.submit (@notebook.new_record? ? 'Adicionar Notebook' : 'Atualizar Notebook'), class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors hover:cursor-pointer" %>
  </div>
<% end %> 